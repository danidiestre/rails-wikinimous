<div class="container">
  <h1>My articles</h1>
  <ul>
    <% @articles.each do |article| %>
        <li><%= link_to article.title, article_path(article) %>
        <%= link_to "Delete ",
            article_path(article),
            method: :delete,
            data: { confirm: "Are you sure?" } %>          
    <% end %></li>
  </ul>

  <%= link_to 'Add a new article!', new_article_path%>
